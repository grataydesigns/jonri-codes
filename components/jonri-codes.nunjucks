{% macro button(
          class=false,
          text,
          el="button",
          href="#",
          icon_left=false,
          icon_right=false,
          icon_path=false) %}

    {# Modifier classes for icon buttons #}
    {% if icon_left or icon_right %}
        {% set class = class + " jc-button--with-icons" %}
    {% endif %}

    <{{ el }}
        class="jc-button{{ " " + class if class }}"
        {% if href %} href="{{ href }}" {% endif %}
        {% if icon_left or icon_right %}
            <span class="jc-button__inner">
              {% if icon_left %}
                  {{ icon(class="jc-button__icon jc-button__icon-left", name=icon_left, path=icon_path) }}
              {% endif %}
        {% endif %}

        {% if text and (icon_left or icon_right) %}
            <span class="jc-button__text">
        {% endif %}

              {{ text }}

        {% if text and (icon_left or icon_right) %}
            </span>
        {% endif %}

        {% if icon_left or icon_right %}
            {% if icon_right %}
                {{ icon(class="jc-button__icon jc-button__icon-right", name=icon_right, path=icon_path) }}
            {% endif %}
          </span>
        {% endif %}
{% endmacro %}

{% macro card(class=false, media=false, title, title_heading_level, text, links) %}
<div class="card{{ " " + class if class }}">
  {% if media %}
    <div class="card__media">
      {{ media | safe }}
    </div>
  {% endif %}
  <div class="card__content">
    {% if title %}
      {{ card_title(title=title, title_heading_level=title_heading_level) }}
    {% endif %}
    {{ text | safe }}
    {% if link %}
      {{ link(text=links.text, class="card__link", href=links.href, icon_right=link.icon) }}
    {% endif %}
  </div>
</div>
{% endmacro %}

{% macro card_title(class=false, title, title_heading_level) %}
  <{{ title_heading_level }} class="card__title{{ " " + class if class}}">
    <span class="card__title-text">{{ title }}</span>
  </{{ title_heading_level }}>
{% endmacro %}

