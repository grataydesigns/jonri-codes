{% extends "templates/sink.njk" %}
{% block body %}
    <style>
        body {
            padding: 20px;
        }
    </style>
    <h1 class="esds-doc-sink-page-header">HTML Example Lists</h1>

    <h1 class="esds-doc-sink-page-header">Basic Example</h1>
    {{ library.html_example_list(example="<h1 style='font-size: 40px; font-style: normal; font-weight: bold; color: black; background: transparent; margin: 0;'>Hello World!</h1>") }}

    <h1 class="esds-doc-sink-page-header">Passing a nunjucks macro call</h1>
    {{ library.html_example_list(example=library.button(text="Button Text")) }}

    <h1 class="esds-doc-sink-page-header">With a label</h1>
    {{ library.html_example_list(example=library.button(text="Button Text"), label="A Basic Button") }}

    <h1 class="esds-doc-sink-page-header">Multiple Examples with labels</h1>
    {{ library.html_example_list(examples=[
        {
            example: library.button(text="Button Text"),
            label: "A Basic Button"
        },
        {
            example: library.button(text="Call To Action"),
            label: "Another Button Example"
        },
        {
            example: library.code_snippet(source="<h1>Hello World</h1>"),
            label: "Code Snippet"
        }
    ]) }}

    <h1 class="esds-doc-sink-page-header">Dark Background Modifier Class</h1>
    {{ library.html_example_list(class="esds-doc-container--dark", example=library.button(text="Button Text")) }}



    <h1 class="esds-doc-sink-page-header">Multiple Examples with labels and dark backgrounds</h1>
    {{ library.html_example_list(class="esds-doc-container--dark", examples=[
        {
            example: library.button(text="Button Text"),
            label: "A Basic Button"
        },
        {
            example: library.button(text="Call To Action"),
            label: "Another Button Example"
        },
        {
            example: library.code_snippet(source="<h1>Hello World</h1>"),
            label: "Code Snippet"
        }
    ]) }}

    <h1 class="esds-doc-sink-page-header">Multiple Examples with labels and different background colors</h1>
    {{ library.html_example_list(examples=[
        {
            example: library.button(text="Button Text"),
            label: "A Basic Button"
        },
        {
            example: library.button(text="Call To Action"),
            label: "Another Button Example",
            class: "esds-doc-container--dark"
        },
        {
            example: library.code_snippet(source="<h1>Hello World</h1>"),
            label: "Code Snippet"
        }
    ]) }}

    <h1 class="esds-doc-sink-page-header">No inset padding</h1>
    {{ library.html_example_list(class="esds-doc-html-example-list--no-inset", example=library.button(text="Button Text")) }}

    <h1 class="esds-doc-sink-page-header">List, with and without inset</h1>
    {{ library.html_example_list(examples=[
        {
            example: library.button(text="Button Text"),
            label: "A Basic Button"
        },
        {
            example: library.button(text="Call To Action"),
            label: "Another Button Example, no inset padding",
            class: "esds-doc-html-example-list__item--no-inset"
        },
        {
            example: library.code_snippet(source="<h1>Hello World</h1>"),
            label: "Code Snippet"
        }
    ]) }}

    <h1 class="esds-doc-sink-page-header">Override Label Markup (Instance Level)</h1>
    {% set custom_markup %}
        <style>
            .my-custom-pill {
                background: lemonchiffon;
                border-radius: 30px;
                border: solid 1px red;
                color: goldenrod;
                display: block;
                font-size: 10px;
                padding: 3px;
                position: absolute;
                right: 0;
                top: 0;
            }
        </style>

        <span class="my-custom-pill">Ugly Label</span>
    {% endset %}
    {{ library.html_example_list(example=library.button(text="Button Text"), example_label_markup=custom_markup) }}

    <h1 class="esds-doc-sink-page-header">Override Label Markup (Globally)</h1>
    {{ library_with_markup_overrides.html_example_list(example=library.button(text="Button Text"), label="This should look different") }}

{% endblock %}
